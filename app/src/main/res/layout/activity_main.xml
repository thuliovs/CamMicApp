<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Conteúdo centralizado abaixo da Toolbar -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Estado do Sensor -->
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado do Sensor"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Botão para Abrir Câmara -->
        <Button
            android:id="@+id/btnCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir Câmara"
            android:layout_marginBottom="16dp" />

        <!-- Imagem capturada -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF" />

        <!-- Botões para Gravação de Áudio -->
        <Button
            android:id="@+id/btnGravar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravar Áudio"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPararGravacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parar Gravação"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnReproduzirAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproduzir Áudio"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPararAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parar Áudio"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</RelativeLayout>
